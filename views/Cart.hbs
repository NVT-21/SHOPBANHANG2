
<body>
  
    <div class="cart-shoping">
        <h2>Your Cart</h2>
        <ul class="cart-items"> 
          {{#if cart.length}}
          {{#each cart}} 
          <li class="cart-item">
            
            <img src="img/{{this.product.photo}}" alt="Product Image">
            <div class="item-details">
              <h3>{{this.product.name}}</h3>
              <p>{{this.product.description}}</p>
              <span class="item-price">{{this.price}}</span>
              <div class="quantity-controls">
                <button class="decrement-button" data-product-id="{{productId}}" data-action="remove">-</button>
                <span class="item-quantity">{{this.quantity}}</span>
                <button class="increment-button" data-product-id="{{productId}}" data-action="add" >+</button>
              </div>
              <button class="remove-button" data-product-id="{{productId}}" data-action="delete" >Remove</button>
            </div>
          </li>
           {{/each}} 
          
       
         </ul>
        {{/if}}
        


        <div class="cart-total">
          <span>Total:</span>
          <span class="total-price">{{cart.totalPrice}}</span> 
        </div>
        <button id="checkout" class="checkout-button">Checkout</button>
      </div>
 

</body>

